#include <stdio.h>

void fractionalKnapsack(int n, float weight[], float profit[], float capacity) {
    float ratio[20], temp;
    int i, j;
    
    for (i = 0; i < n; i++) ratio[i] = profit[i] / weight[i];

    // Sort Descending by Ratio
    for (i = 0; i < n; i++) {
        for (j = i + 1; j < n; j++) {
            if (ratio[i] < ratio[j]) {
                temp = ratio[j]; ratio[j] = ratio[i]; ratio[i] = temp;
                temp = weight[j]; weight[j] = weight[i]; weight[i] = temp;
                temp = profit[j]; profit[j] = profit[i]; profit[i] = temp;
            }
        }
    }

    float currentWeight = 0, totalProfit = 0;
    for (i = 0; i < n; i++) {
        if (currentWeight + weight[i] <= capacity) {
            currentWeight += weight[i];
            totalProfit += profit[i];
        } else {
            int remain = capacity - currentWeight;
            totalProfit += profit[i] * ((float)remain / weight[i]);
            break;
        }
    }
    printf("Maximum Profit (Fractional): %.2f\n", totalProfit);
}

int main() {
    float weight[] = {10, 20, 30};
    float profit[] = {60, 100, 120};
    float capacity = 50;
    fractionalKnapsack(3, weight, profit, capacity);
    return 0;
}
